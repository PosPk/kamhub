{
  "name": "kamhub",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "bash start-server.sh",
    "migrate": "tsx scripts/migrate.ts",
    "migrate:up": "tsx scripts/migrate.ts up",
    "migrate:down": "tsx scripts/migrate.ts down",
    "migrate:status": "tsx scripts/migrate.ts status",
    "migrate:accommodation": "tsx scripts/migrate-accommodation.ts",
    "migrate:accommodation:seed": "tsx scripts/migrate-accommodation.ts --seed",
    "db:test": "tsx -e \"import { testConnection } from './lib/database'; testConnection().then(console.log)\"",
    "db:info": "tsx -e \"import { getTableInfo } from './lib/database'; getTableInfo().then(r => console.log(r.rows))\"",
    "db:stats": "tsx -e \"import { getTableStats } from './lib/database'; getTableStats().then(r => console.log(r.rows))\"",
    "db:cleanup": "tsx -e \"import { cleanupOldData } from './lib/database'; cleanupOldData()\"",
    "db:integrity": "tsx -e \"import { checkDataIntegrity } from './lib/database'; checkDataIntegrity().then(console.log)\"",
    "timeweb:check": "tsx scripts/timeweb-check.ts",
    "timeweb:setup": "tsx scripts/timeweb-setup.ts",
    "timeweb:manage": "tsx scripts/timeweb-manage.ts",
    "timeweb:status": "tsx scripts/timeweb-manage.ts project",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@floating-ui/react": "^0.27.16",
    "@floating-ui/react-dom": "^2.1.6",
    "@next/swc-linux-x64-gnu": "^15.5.5",
    "@types/nodemailer": "^7.0.2",
    "clsx": "^2.0.0",
    "next": "14.2.15",
    "nodemailer": "^7.0.9",
    "pg": "^8.11.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.10.0",
    "@types/react": "18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.5.5",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.0.0",
    "typescript": "5.4.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
