# ============================================
# TIMEWEB CLOUD APPS - ENVIRONMENT VARIABLES
# ============================================
# Скопируйте эти переменные в Timeweb Cloud Apps Dashboard
# Settings → Environment Variables

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://kamchatour-hub.timeweb.app

# ============================================
# DATABASE (Timeweb Managed PostgreSQL)
# ============================================
# После создания PostgreSQL в Timeweb Apps,
# скопируйте DATABASE_URL из email или dashboard
DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# S3 STORAGE (Timeweb S3)
# ============================================
# После создания S3 bucket в Timeweb Apps,
# скопируйте credentials из email
S3_ENDPOINT=https://s3.timeweb.cloud
S3_BUCKET=kamchatour-media
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_REGION=ru-2

# ============================================
# AI PROVIDERS (ОБЯЗАТЕЛЬНО хотя бы один!)
# ============================================
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# YANDEX SERVICES (ОБЯЗАТЕЛЬНО!)
# ============================================
YANDEX_MAPS_API_KEY=your_yandex_maps_key_here
YANDEX_WEATHER_API_KEY=your_yandex_weather_key_here

# Yandex Payments (опционально)
YANDEX_PAYMENT_SHOP_ID=your_shop_id
YANDEX_PAYMENT_SECRET_KEY=your_secret_key

# ============================================
# AUTHENTICATION (ОБЯЗАТЕЛЬНО!)
# ============================================
# Сгенерируйте: openssl rand -base64 32
JWT_SECRET=generate_random_32_characters_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
NEXTAUTH_SECRET=generate_random_32_characters_here
NEXTAUTH_URL=https://kamchatour-hub.timeweb.app

# ============================================
# TELEGRAM BOT (опционально)
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_WEBHOOK_URL=https://kamchatour-hub.timeweb.app/api/telegram/webhook

# ============================================
# PAYMENT SYSTEMS (опционально)
# ============================================
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_API_SECRET=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# NOTIFICATIONS (опционально)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@kamchatour.ru
SMS_RU_API_ID=

# ============================================
# MONITORING (опционально)
# ============================================
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=https://kamchatour-hub.timeweb.app
ENCRYPTION_KEY=generate_random_32_characters_here

# ============================================
# ANALYTICS (опционально)
# ============================================
GOOGLE_ANALYTICS_ID=
YANDEX_METRIKA_ID=

# ============================================
# CACHING (Redis в Timeweb Apps)
# ============================================
# Если подключите Redis addon
REDIS_URL=redis://default:password@host:6379
REDIS_PASSWORD=
REDIS_DB=0
