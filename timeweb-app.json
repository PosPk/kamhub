{
  "name": "kamchatour-hub",
  "region": "ru-2",
  "framework": "nextjs",
  "runtime": "nodejs20",
  "buildCommand": "npm run build",
  "startCommand": "npm start",
  "port": 3000,
  "environment": "production",
  "autoDeploy": true,
  "envVars": {
    "NODE_ENV": "production",
    "PORT": "3000"
  },
  "postgresql": {
    "enabled": true,
    "version": "16",
    "preset": "P1"
  },
  "s3": {
    "enabled": true,
    "bucket": "kamchatour-media"
  },
  "resources": {
    "cpu": "1",
    "memory": "1GB",
    "instances": 1
  }
}
