{
  "name": "kamchatour-hub",
  "region": "ru-2",
  "framework": "nextjs",
  "runtime": "nodejs20",
  "buildCommand": "npm run build",
  "startCommand": "node .next/standalone/server.js",
  "port": 8080,
  "environment": "production",
  "autoDeploy": true,
  "envVars": {
    "NODE_ENV": "production",
    "PORT": "8080",
    "JWT_SECRET": "kamchatour-super-secret-key-2025-production",
    "NEXTAUTH_URL": "https://pospk-kamhub-70c4.twc1.net",
    "NEXT_PUBLIC_API_URL": "https://pospk-kamhub-70c4.twc1.net/api",
    "SKIP_SENTRY": "true"
  },
  "postgresql": {
    "enabled": true,
    "version": "16",
    "preset": "P1"
  },
  "s3": {
    "enabled": true,
    "bucket": "kamchatour-media"
  },
  "resources": {
    "cpu": "1",
    "memory": "1GB",
    "instances": 1
  }
}
