# Основные настройки приложения
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# База данных
DATABASE_URL=postgresql://username:password@localhost:5432/kamchatour
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=2000
DATABASE_IDLE_TIMEOUT=30000

# AI провайдеры
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MAX_TOKENS=4000
AI_DAILY_BUDGET_USD=10.0

# Аутентификация
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Файлы
FILE_MAX_SIZE=10485760
FILE_UPLOAD_PATH=/uploads
CDN_URL=

# Карты
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here
YANDEX_WEATHER_API_KEY=your_yandex_weather_api_key_here

# Платежи
YANDEX_PAYMENT_SHOP_ID=your_yandex_payment_shop_id
YANDEX_PAYMENT_SECRET_KEY=your_yandex_payment_secret_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Уведомления
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@kamchatour.ru
SMS_RU_API_ID=your_sms_ru_api_id
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Кэширование
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Мониторинг
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Безопасность
CORS_ORIGIN=http://localhost:3000,https://kamchatour.ru
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Аналитика
GOOGLE_ANALYTICS_ID=your_google_analytics_id
YANDEX_METRIKA_ID=your_yandex_metrika_id

# Разработка
MOCK_DATA=false
VERBOSE_LOGGING=false

# Timeweb Cloud (для CI/CD и API)
# Добавьте TIMEWEB_TOKEN в GitHub Secrets (Settings → Secrets and variables → Actions)
TIMEWEB_TOKEN=
# Необязательно: параметры для провижининга
TIMEWEB_REGION=
TIMEWEB_VDS_PRESET=

# Безопасность/демо
# В продакшене оставить false (по умолчанию выключено)
DEMO_LOGIN_ENABLED=false