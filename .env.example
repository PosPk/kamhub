# =============================================
# KAMCHATOUR HUB ENVIRONMENT VARIABLES
# =============================================

# =============================================
# DATABASE
# =============================================
DATABASE_URL=postgresql://user:password@host:5432/kamchatour
DATABASE_SSL=true
DATABASE_MAX_CONNECTIONS=20

# =============================================
# AI APIs
# =============================================
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
AI_MAX_TOKENS=4000
AI_DAILY_BUDGET_USD=10.0

# =============================================
# MAPS & WEATHER
# =============================================
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key
YANDEX_WEATHER_API_KEY=your_yandex_weather_api_key

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================
# PAYMENTS
# =============================================
CLOUDPAYMENTS_PUBLIC_ID=your_cloudpayments_public_id
CLOUDPAYMENTS_API_SECRET=your_cloudpayments_api_secret

# =============================================
# NOTIFICATIONS
# =============================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@kamchatour.ru

# SMS
SMS_RU_API_ID=your_sms_ru_api_id

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# =============================================
# MONITORING & LOGGING
# =============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# =============================================
# ANALYTICS
# =============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
YANDEX_METRIKA_ID=XXXXXXXX

# =============================================
# APPLICATION
# =============================================
NEXT_PUBLIC_APP_URL=https://kamchatour.ru
NODE_ENV=production
VERCEL_URL=your-app.vercel.app

# =============================================
# REDIS (Optional - for production)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================
# S3 / CLOUD STORAGE (Optional - for backups)
# =============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=kamchatour-backups
S3_REGION=us-east-1

# =============================================
# DEVELOPMENT
# =============================================
# Для локальной разработки установите:
# NODE_ENV=development
# DATABASE_URL=postgresql://localhost:5432/kamchatour_dev
# Остальные API ключи опциональны для dev
