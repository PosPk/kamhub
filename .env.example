# ============================================
# KAMCHATOUR HUB - ENVIRONMENT VARIABLES
# ============================================
# Скопируйте в .env.production и заполните реальными значениями

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://45.8.96.120

# ============================================
# DATABASE (Timeweb Cloud PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/database
DB_HOST=your_db_host_from_timeweb_email
DB_PORT=5432
DB_USER=your_db_user_from_timeweb_email
DB_PASSWORD=your_db_password_from_timeweb_email
DB_NAME=your_database_name

# ============================================
# S3 STORAGE (Timeweb Cloud Object Storage)
# ============================================
S3_ENDPOINT=https://your_s3_endpoint_from_timeweb
S3_BUCKET=kamchatour-media
S3_ACCESS_KEY=your_s3_access_key_from_timeweb_email
S3_SECRET_KEY=your_s3_secret_key_from_timeweb_email
S3_REGION=ru-2

# ============================================
# AI PROVIDERS
# ============================================
GROQ_API_KEY=your_groq_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
AI_MAX_TOKENS=4000
AI_DAILY_BUDGET_USD=10.0

# ============================================
# YANDEX SERVICES
# ============================================
YANDEX_MAPS_API_KEY=your_yandex_maps_key
YANDEX_WEATHER_API_KEY=your_yandex_weather_key
YANDEX_PAYMENT_SHOP_ID=your_shop_id
YANDEX_PAYMENT_SECRET_KEY=your_secret_key

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=generate_random_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
NEXTAUTH_SECRET=generate_random_32_chars
NEXTAUTH_URL=http://45.8.96.120

# ============================================
# TELEGRAM BOT (опционально)
# ============================================
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_WEBHOOK_URL=http://45.8.96.120/api/telegram/webhook

# ============================================
# PAYMENT SYSTEMS (опционально)
# ============================================
CLOUDPAYMENTS_PUBLIC_ID=your_cloudpayments_id
CLOUDPAYMENTS_API_SECRET=your_cloudpayments_secret
STRIPE_SECRET_KEY=your_stripe_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_public
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# NOTIFICATIONS
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@kamchatour.ru
SMS_RU_API_ID=your_sms_ru_api_id

# ============================================
# CACHING (опционально, для масштабирования)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# MONITORING (опционально)
# ============================================
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ============================================
# SECURITY
# ============================================
CORS_ORIGIN=http://45.8.96.120,http://localhost:3000
ENCRYPTION_KEY=generate_random_32_chars

# ============================================
# ANALYTICS (опционально)
# ============================================
GOOGLE_ANALYTICS_ID=
YANDEX_METRIKA_ID=

# ============================================
# DEVELOPMENT
# ============================================
MOCK_DATA=false
VERBOSE_LOGGING=false
