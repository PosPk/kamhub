# =============================================
# KAMCHATOUR HUB - ENVIRONMENT VARIABLES
# =============================================
# Скопируйте этот файл в .env.local и заполните

# =============================================
# ПРИЛОЖЕНИЕ
# =============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================
# БЕЗОПАСНОСТЬ ⚠️ КРИТИЧНО!
# =============================================
# ВАЖНО: Сгенерируйте безопасный ключ командой:
# npm run generate:jwt-secret
JWT_SECRET=your-secret-key  # ⚠️ ЗАМЕНИТЕ В PRODUCTION!
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================
# БАЗА ДАННЫХ
# =============================================
DATABASE_URL=postgresql://kamuser:kampass@localhost:5432/kamchatour
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=2000
DATABASE_IDLE_TIMEOUT=30000

# =============================================
# REDIS КЭШИРОВАНИЕ
# =============================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# =============================================
# ЛОГИРОВАНИЕ
# =============================================
ENABLE_FILE_LOGGING=true
LOG_LEVEL=info

# =============================================
# AI API KEYS
# =============================================
# GROQ (Llama 3.1 70B) - Рекомендуется
GROQ_API_KEY=

# DeepSeek (альтернатива)
DEEPSEEK_API_KEY=

# OpenRouter (резерв)
OPENROUTER_API_KEY=

# Настройки AI
AI_MAX_TOKENS=4000
AI_DAILY_BUDGET_USD=10.0

# =============================================
# EMAIL (SMTP)
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@kamchatour.ru
SMTP_FROM_NAME=Kamchatour Hub

# =============================================
# ПЛАТЕЖИ
# =============================================
# CloudPayments
CLOUDPAYMENTS_PUBLIC_ID=
CLOUDPAYMENTS_API_SECRET=
CLOUDPAYMENTS_CURRENCY=RUB

# Stripe (опционально)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================
# КАРТЫ
# =============================================
YANDEX_MAPS_API_KEY=

# =============================================
# ПОГОДА
# =============================================
OPENWEATHER_API_KEY=

# =============================================
# БЭКАПЫ
# =============================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30

# S3 для облачных бэкапов (опционально)
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================
# УВЕДОМЛЕНИЯ
# =============================================
# Telegram бот (опционально)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================
# МОНИТОРИНГ
# =============================================
# Sentry (опционально)
SENTRY_DSN=

# =============================================
# ДРУГОЕ
# =============================================
FILE_MAX_SIZE=10485760  # 10MB
FILE_UPLOAD_PATH=/uploads
CDN_URL=
